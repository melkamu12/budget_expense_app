<main class="category-section">
  <div class="category-container">
    <%= render "shared/head", title: 'Edit Category', back: true %>
    <div class="success-fail">
      <% if flash[:notice] %>
        <%= render 'shared/message', message: flash[:notice], status: 'success' %>
      <% end %>

      <% if flash[:alert] %>
        <%= render 'shared/message', message: flash[:alert], status: 'danger' %>
      <% end %>
    </div>
    <%= form_for @category, url: category_path(@category), method: :patch, class: 'form-horizontal' do |f| %>
    <div class="category-edit-form mt-5 bg-light">
        <div class="form-group">
          <%= f.label :name, class: 'control-label col-sm-2' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :icon, class: 'control-label col-sm-2' %>
          <div class="col-sm-10">
            <%= f.select :icon, @icon_options, { selected: @category.icon, prompt: "Select an Icon" }, { class: 'form-control form-control-lg mb-1', 'aria-label': 'Select an Icon' } %>
          </div>
        </div>
    </div>

    <div class="mt-auto">
      <div class="add-category-container d-flex justify-content-center px-3 px-md-5 py-3">
            <%= f.submit 'Update Category', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>

  </div>
</main>
