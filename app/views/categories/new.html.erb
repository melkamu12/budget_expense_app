<section class="category-section">
      <div>
        <%= render "shared/head", title: "add category", back: true %>
    </div>
    <div class="form-container">
    <%= form_with model: @category do |form| %>
      <div class="card p-3 p-md-5">
        <%= form.text_field :name, required: true, placeholder: "Enter New Category", class: 'form-control'%>
        <%= form.select :icon, @icon_options, { prompt: "Select an Icon" }, { class: 'form-control form-control-lg mb-1', 'aria-label': 'Select an Icon' } %>
      </div>

      <div class="add-category-container d-flex justify-content-center px-3 px-md-5 py-3 py-md-5">
        <%= form.submit "Create category", class: 'btn btn-primary btn-lg w-80' %>
      </div>
    <% end %>
  </div>
  </section>
